{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ILogin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "admin@test.com"
        },
        "password": {
          "type": "string",
          "example": "admin123"

        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "ILoginInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "role": {
          "type": "number"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "id",
        "role",
        "scopes"
      ]
    },
    "IRegister": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        }
      },
      "required": [
        "confirmPassword",
        "email",
        "name",
        "password"
      ]
    },
    "IUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "role": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "email",
        "id",
        "name",
        "password",
        "role"
      ]
    },
    "ICreateUser": {
      "type": "object",
      "properties": {
        "role": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "email",
        "name",
        "password",
        "role"
      ]
    },
    "IUpdateUser": {
      "type": "object",
      "properties": {
        "role": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "IGetUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "role": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "email",
        "id",
        "name",
        "role"
      ]
    },
    "IRole": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "IRoleScopes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "Scopes": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "Scopes",
        "id",
        "name"
      ]
    },
    "INote": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "ownerId": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "title",
        "content"
      ]
    },
    "ICreateNote": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "content"
      ]
    },
    "IUpdateNote": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    },
    "IShareNote":{
      "type": "object",
      "properties": {
        "UsersId":{
          "type": "array",
          "items": {
            "type":"number"
          }
        }
      }
    },
    "IScope": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "IOkResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number"
        },
        "message": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "data": {
          "type": "object"
        }
      },
      "required": [
        "data",
        "message",
        "status",
        "timestamp"
      ]
    },
    "IErrorResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number"
        },
        "message": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "errorDetails": {
          "type": "object"
        }
      },
      "required": [
        "message",
        "status",
        "timestamp"
      ]
    }
  }
}